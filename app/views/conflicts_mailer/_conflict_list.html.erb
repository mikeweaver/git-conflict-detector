<% if !conflicts.empty? %>
    <h3><%= heading %></h3>
    <% conflicts.each do |conflict| %>
        <p>
            <% if @user.id == conflict.branch_a.author.id %>
                <%= render partial: 'conflict', locals: {branch_a: conflict.branch_a, branch_b: conflict.branch_b, resolved: false} %>
            <% else %>
                <%= render partial: 'conflict', locals: {branch_a: conflict.branch_b, branch_b: conflict.branch_a, resolved: false} %>
            <% end %>
        </p>
        <% conflict.conflicting_files_excluding(@hidden_file_list).each do |file| %>
            <p style="margin-left:20px;margin-top:0px;margin-bottom:0px">
                <a href="https://github.com/<%= @repo_name %>/blob/<%= conflict.branch_a.name %>/<%= file %>" style="text-decoration: none;"><%= file %></a>
            </p>
        <% end %>
        <% hidden_files = conflict.conflicting_files_including(@hidden_file_list) %>
        <% unless hidden_files.empty? %>
            <p style="margin-left:20px;margin-top:0px;margin-bottom:0px">
              and <%= hidden_files.size %> file(s) on ignore list
            </p>
        <% end %>
    <% end %>
<% end %>
